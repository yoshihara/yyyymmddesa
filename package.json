{
  "name": "yyyymmddesa",
  "version": "0.1.2",
  "description": "Tiny tools for daily report in esa.io",
  "main": "content.js",
  "private": false,
  "scripts": {
    "package": "yarn build && zip package.zip -j build/*",
    "clean": "rm -rf build/ && mkdir -p build",
    "build:module": "webpack --config webpack.config.js",
    "build:metadata": "rm -rf build/*.png build/manifest.json && cp -a metadata/* build/",
    "build:html": "rm -rf build/*.html && pug -s src/pug -o build",
    "build": "npm-run-all clean build:*",
    "watch:module": "watchy -w src/js -w src/sass -w webpack.config.js -- yarn run build:module",
    "watch:metadata": "watchy -w metadata -- yarn run build:metadata",
    "watch:html": "watchy -w src/pug -- yarn run build:html",
    "watch": "npm-run-all clean -p watch:*",
    "fmt": "prettier --write src/js/*.js src/js/**/*.js __test__/*js",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yoshihara/yyyymmddesa"
  },
  "keywords": [
    "esa.io"
  ],
  "author": "yoshihara",
  "license": "MIT",
  "homepage": "https://github.com/yoshihara/yyyymmddesa",
  "devDependencies": {
    "@babel/core": "^7.1.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/runtime": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.2",
    "css-loader": "^0.28.10",
    "eslint": "^5.6.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-jest": "^21.22.1",
    "eslint-plugin-prettier": "^2.6.2",
    "expose-loader": "^0.7.3",
    "husky": "^1.0.0-rc.15",
    "jest": "^23.6.0",
    "lint-staged": "^7.3.0",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.0.2",
    "prettier": "^1.11.1",
    "pug-cli": "^1.0.0-alpha6",
    "regenerator-runtime": "^0.12.1",
    "sass-loader": "^6.0.7",
    "style-loader": "^0.20.3",
    "watchy": "^0.7.0",
    "webpack": "^3.5.4"
  },
  "dependencies": {
    "bluebird": "^3.5.2",
    "jquery": "^3.2.1",
    "moment": "^2.21.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ]
  },
  "jest": {
    "automock": true,
    "unmockedModulePathPatterns": [
      "node_modules"
    ],
    "setupFiles": [
      "./__test__/setup-jest.js"
    ]
  }
}
